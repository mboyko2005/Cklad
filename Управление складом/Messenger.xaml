<Window x:Class="УправлениеСкладом.MessengerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:УправлениеСкладом"
        Title="Мессенджер" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Opacity="0" 
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- Современный стиль кнопок с эффектом масштабирования -->
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                             To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                             To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                             To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                             To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox со скругленными углами -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Градиентный стиль кнопок (отправка и прикрепление) -->
        <Style x:Key="GradientButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF66CDAA" Offset="0"/>
                        <GradientStop Color="#FF20B2AA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Стиль "чипа" (подсказки) -->
        <Style x:Key="SuggestionChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="LightBlue"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Blue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Шаблон для списка контактов -->
        <DataTemplate x:Key="ContactItemTemplate" DataType="{x:Type local:ContactInfo}">
            <Grid Margin="5,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Иконка пользователя -->
                <iconPacks:PackIconMaterial Kind="AccountCircle"
                                            Width="24"
                                            Height="24"
                                            Foreground="Gray"
                                            Margin="5,0"
                                            Grid.Column="0"/>
                <!-- Логин пользователя -->
                <TextBlock Text="{Binding Login}"
                           VerticalAlignment="Center"
                           Grid.Column="1"
                           FontFamily="Segoe UI"
                           Margin="5,0"/>
                <!-- Статус (количество непрочитанных или "✓") -->
                <TextBlock Text="{Binding Status}"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           Margin="5,0,10,0"
                           Grid.Column="2"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Window.Triggers>
        <!-- Анимация плавного появления окна -->
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="20" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Левая панель: поисковая строка + список контактов -->
                    <ColumnDefinition Width="250"/>
                    <!-- Правая панель -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая панель -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Контакты"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               Margin="0,0,0,10"
                               FontFamily="Segoe UI"/>
                    <!-- Поисковая строка -->
                    <TextBox x:Name="SearchTextBox"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Height="30"
                             Margin="0,0,0,10"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <!-- Список контактов -->
                    <ListBox x:Name="ContactsListBox"
                             ItemTemplate="{StaticResource ContactItemTemplate}"
                             Background="Transparent"
                             BorderThickness="0"/>
                </StackPanel>

                <!-- Правая панель -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <!-- Заголовок чата -->
                        <RowDefinition Height="Auto"/>
                        <!-- Область сообщений -->
                        <RowDefinition Height="*"/>
                        <!-- Подсказки (чипы) -->
                        <RowDefinition Height="Auto"/>
                        <!-- Панель ввода сообщения -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок чата -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock x:Name="ChatTitle"
                                       Text="Выберите контакт"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"/>
                            <TextBlock x:Name="ChatUserLogin"
                                       Text=""
                                       FontSize="14"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                        <Button Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Click="CloseButton_Click"
                                Style="{StaticResource ModernButtonStyle}">
                            <iconPacks:PackIconMaterial Kind="Close"
                                                        Width="24" Height="24"
                                                        Foreground="{DynamicResource PrimaryBrush}"/>
                        </Button>
                    </Grid>

                    <!-- Область сообщений -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="MessagesPanel"/>
                    </ScrollViewer>

                    <!-- Подсказки (чипы) -->
                    <StackPanel x:Name="SuggestionPanel"
                                Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,10,0,10"
                                Visibility="Visible"
                                HorizontalAlignment="Center">
                        <Border Style="{StaticResource SuggestionChipStyle}"
                                MouseLeftButtonUp="Suggestion_Click">
                            <TextBlock Text="Привет" FontFamily="Segoe UI"/>
                        </Border>
                        <Border Style="{StaticResource SuggestionChipStyle}"
                                MouseLeftButtonUp="Suggestion_Click">
                            <TextBlock Text="Ты занят?" FontFamily="Segoe UI"/>
                        </Border>
                        <Border Style="{StaticResource SuggestionChipStyle}"
                                MouseLeftButtonUp="Suggestion_Click">
                            <TextBlock Text="Напиши когда сможешь" FontFamily="Segoe UI"/>
                        </Border>
                    </StackPanel>

                    <!-- Панель ввода сообщения -->
                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="MessageTextBox"
                                 Style="{StaticResource RoundedTextBoxStyle}"
                                 Margin="0,0,10,0"
                                 Height="40"
                                 FontFamily="Segoe UI"
                                 VerticalContentAlignment="Center"
                                 TextChanged="MessageTextBox_TextChanged"/>

                        <Button Grid.Column="1"
                                Width="50" Height="40"
                                Click="SendMessage_Click"
                                Style="{StaticResource GradientButtonStyle}"
                                BorderThickness="1"
                                Margin="0,0,5,0">
                            <iconPacks:PackIconMaterial Kind="Send"
                                                        Width="24" Height="24"
                                                        Foreground="White"/>
                        </Button>

                        <Button Grid.Column="2"
                                Width="50" Height="40"
                                Click="AttachButton_Click"
                                Style="{StaticResource GradientButtonStyle}"
                                BorderThickness="1">
                            <iconPacks:PackIconMaterial Kind="Paperclip"
                                                        Width="24" Height="24"
                                                        Foreground="White"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
