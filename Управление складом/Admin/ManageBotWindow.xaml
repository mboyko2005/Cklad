<Window x:Class="Управление_складом.Админ.ManageBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Управление ботом" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Opacity="0"
        FontFamily="Segoe UI"
        MouseDown="Window_MouseDown"  >

    <Window.Resources>
        <!-- Стиль для кнопок с эффектом масштабирования при наведении -->
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <!-- Анимация плавного появления окна -->
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Border Background="{DynamicResource WindowBackgroundBrush}"
                CornerRadius="20"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Заголовок с кнопкой закрытия -->
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="Управление ботом"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <Button Width="30" Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Click="CloseButton_Click"
                            Style="{StaticResource ModernButtonStyle}">
                        <iconPacks:PackIconMaterial Kind="Close"
                                                    Width="24" Height="24"
                                                    Foreground="{DynamicResource PrimaryBrush}"/>
                    </Button>
                </Grid>

                <!-- Заголовок "Telegram" с иконкой -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <iconPacks:PackIconMaterial Kind="Send" 
                                                Width="24" Height="24" 
                                                Foreground="{DynamicResource ButtonForegroundBrush}" 
                                                Margin="0,0,10,0"
                                                RenderTransformOrigin="0.5,0.5"
                                                VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial.RenderTransform>
                            <RotateTransform Angle="320"/>
                        </iconPacks:PackIconMaterial.RenderTransform>
                    </iconPacks:PackIconMaterial>
                    <TextBlock Text="Telegram"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Форма добавления/обновления/удаления пользователя Telegram -->
                <StackPanel Margin="0,10,0,10">
                    <!-- Строка "Telegram ID" -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" MinWidth="110"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Иконка для Telegram ID -->
                        <iconPacks:PackIconMaterial Grid.Column="0"
                                                    Kind="Send"
                                                    Width="16" Height="16"
                                                    Foreground="{DynamicResource ButtonForegroundBrush}"
                                                    Margin="0,0,5,0"
                                                    RenderTransformOrigin="0.5,0.5"
                                                    VerticalAlignment="Center">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <RotateTransform Angle="320"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>

                        <!-- Надпись "Telegram ID:" -->
                        <TextBlock Grid.Column="1"
                                   Text="Telegram ID:"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>

                        <!-- Поле ввода -->
                        <TextBox x:Name="TelegramIdTextBox"
                                 Grid.Column="2"
                                 Width="300" Height="25"/>
                    </Grid>

                    <!-- Строка "Роль" -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" MinWidth="110"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Иконка для Роль -->
                        <iconPacks:PackIconMaterial Grid.Column="0"
                                                    Kind="Account"
                                                    Width="16" Height="16"
                                                    Foreground="{DynamicResource ButtonForegroundBrush}"
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"/>

                        <!-- Надпись "Роль:" -->
                        <TextBlock Grid.Column="1"
                                   Text="Роль:"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>

                        <!-- ComboBox для выбора роли -->
                        <ComboBox x:Name="RoleComboBox"
                                  Grid.Column="2"
                                  Width="300" Height="25">
                            <ComboBoxItem Content="Администратор"/>
                            <ComboBoxItem Content="Менеджер"/>
                            <ComboBoxItem Content="Сотрудник склада"/>
                        </ComboBox>
                    </Grid>

                    <!-- Кнопки "Добавить", "Обновить запись" и "Удалить" -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Добавить"
                                Click="AddUser_Click"
                                Height="35"
                                Width="150"
                                Margin="0,0,10,0"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                BorderBrush="{DynamicResource ButtonBorderBrush}"
                                BorderThickness="1"/>
                        <Button Content="Обновить запись"
                                Click="UpdateUser_Click"
                                Height="35"
                                Width="150"
                                Margin="0,0,10,0"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                BorderBrush="{DynamicResource ButtonBorderBrush}"
                                BorderThickness="1"/>
                        <Button Content="Удалить"
                                Click="DeleteUser_Click"
                                Height="35"
                                Width="150"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                BorderBrush="{DynamicResource ButtonBorderBrush}"
                                BorderThickness="1"/>
                    </StackPanel>
                </StackPanel>

                <!-- Список пользователей Telegram -->
                <TextBlock Text="Список пользователей Telegram:"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Center"/>
                <ListBox x:Name="UsersListBox"
                         Height="150"
                         Margin="0,0,0,10"
                         SelectionChanged="UsersListBox_SelectionChanged"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
