<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_blue"
                android:endColor="@color/telegram_purple"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_blue"
                android:centerColor="@color/telegram_purple"
                android:endColor="@color/telegram_pink"
                android:type="linear"
                android:centerX="0.35"
                android:angle="90" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_purple"
                android:endColor="@color/telegram_pink"
                android:type="linear"
                android:angle="135" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_pink"
                android:centerColor="@color/telegram_red"
                android:endColor="@color/telegram_orange"
                android:type="linear"
                android:centerX="0.6"
                android:angle="180" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_red"
                android:endColor="@color/telegram_orange"
                android:type="linear"
                android:angle="225" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_orange"
                android:centerColor="@color/telegram_green"
                android:endColor="@color/telegram_blue"
                android:type="linear"
                android:centerX="0.4"
                android:angle="270" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_green"
                android:endColor="@color/telegram_blue"
                android:type="linear"
                android:angle="315" />
        </shape>
    </item>
    
    <item android:duration="2500">
        <shape>
            <gradient
                android:startColor="@color/telegram_green"
                android:centerColor="@color/telegram_blue"
                android:endColor="@color/telegram_purple"
                android:type="linear"
                android:centerX="0.25"
                android:angle="0" />
        </shape>
    </item>
</animation-list> 