<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.example.apk.views.ImageViewer
        android:id="@+id/image_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.apk.views.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    
    <com.example.apk.views.CropView
        android:id="@+id/crop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Основные инструменты -->
        <LinearLayout
            android:id="@+id/main_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_rotate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_rotate"
                android:tint="@android:color/white"
                android:contentDescription="Повернуть" />

            <ImageButton
                android:id="@+id/btn_crop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_crop"
                android:tint="@android:color/white"
                android:contentDescription="Обрезать" />

            <ImageButton
                android:id="@+id/btn_draw"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="@android:color/white"
                android:contentDescription="Рисовать" />

            <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_save"
                android:tint="@android:color/white"
                android:contentDescription="Сохранить" />

        </LinearLayout>

        <!-- Инструменты для рисования -->
        <LinearLayout
            android:id="@+id/drawing_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <!-- Палитра цветов -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <ImageButton
                        android:id="@+id/btn_color_red"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="@color/drawing_red"
                        android:contentDescription="Красный" />

                    <ImageButton
                        android:id="@+id/btn_color_green"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="@color/drawing_green"
                        android:contentDescription="Зеленый" />

                    <ImageButton
                        android:id="@+id/btn_color_blue"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="@color/drawing_blue"
                        android:contentDescription="Синий" />

                    <ImageButton
                        android:id="@+id/btn_color_black"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="@color/drawing_black"
                        android:contentDescription="Черный" />

                    <ImageButton
                        android:id="@+id/btn_color_white"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="@android:color/white"
                        android:contentDescription="Белый" />

                    <ImageButton
                        android:id="@+id/btn_color_yellow"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="#FFEB3B"
                        android:contentDescription="Желтый" />

                    <ImageButton
                        android:id="@+id/btn_color_orange"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="#FF9800"
                        android:contentDescription="Оранжевый" />

                    <ImageButton
                        android:id="@+id/btn_color_purple"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="#9C27B0"
                        android:contentDescription="Фиолетовый" />

                    <ImageButton
                        android:id="@+id/btn_color_pink"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="#E91E63"
                        android:contentDescription="Розовый" />

                    <ImageButton
                        android:id="@+id/btn_color_brown"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/color_circle"
                        android:backgroundTint="#795548"
                        android:contentDescription="Коричневый" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Толщина линии -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/btn_stroke_thin"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_stroke_thin"
                    android:tint="@android:color/white"
                    android:contentDescription="Тонкая линия" />

                <ImageButton
                    android:id="@+id/btn_stroke_medium"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_stroke_medium"
                    android:tint="@android:color/white"
                    android:contentDescription="Средняя линия" />

                <ImageButton
                    android:id="@+id/btn_stroke_thick"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_stroke_thick"
                    android:tint="@android:color/white"
                    android:contentDescription="Толстая линия" />

            </LinearLayout>

            <!-- Кнопка очистки -->
            <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="@android:color/white"
                android:contentDescription="Очистить" />

        </LinearLayout>

        <!-- Инструменты обрезки -->
        <LinearLayout
            android:id="@+id/crop_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btn_cancel_crop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@android:color/white"
                android:contentDescription="Отменить" />

            <ImageButton
                android:id="@+id/btn_apply_crop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_send"
                android:tint="@android:color/white"
                android:contentDescription="Применить" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout> 