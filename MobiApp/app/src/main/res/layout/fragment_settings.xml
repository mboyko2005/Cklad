<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Настройки"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_title"
        android:layout_marginTop="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Секция администрирования -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Администрирование"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp" />

            <!-- Управление пользователями -->
            <LinearLayout
                android:id="@+id/manage_users_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_contacts"
                    app:tint="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Управление пользователями"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" 
                    app:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Управление складом -->
            <LinearLayout
                android:id="@+id/manage_inventory_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_inventory"
                    app:tint="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Управление складом"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" 
                    app:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Аналитика и отчеты -->
            <LinearLayout
                android:id="@+id/reports_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_reports"
                    app:tint="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Аналитика и отчеты"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" 
                    app:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Настройки системы -->
            <LinearLayout
                android:id="@+id/system_settings_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Настройки системы"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" 
                    app:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Управление ботом -->
            <LinearLayout
                android:id="@+id/bot_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bot"
                    app:tint="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Управление ботом"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" 
                    app:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Раздел очистки кэша -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Данные приложения"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp" />

            <!-- Блок очистки кэша -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <!-- Заголовок и размер кэша -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_storage"
                        app:tint="?android:attr/textColorPrimary" />
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Кэш приложения"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />
                        
                    <TextView
                        android:id="@+id/cache_size_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Мб"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>
                
                <!-- Кнопка очистки кэша -->
                <Button
                    android:id="@+id/clear_cache_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Очистить кэш"
                    android:textColor="@color/white"
                    android:backgroundTint="?attr/colorPrimary" />
                
                <!-- Контейнер для анимации очистки -->
                <FrameLayout
                    android:id="@+id/cache_cleaning_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">
                    
                    <!-- GIF анимация уточки -->
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/duck_animation"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/utyatelegram"
                        android:visibility="visible" />
                    
                    <!-- Прогресс-бар -->
                    <ProgressBar
                        android:id="@+id/cache_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="16dp"
                        android:max="100"
                        android:progress="0" />
                    
                    <!-- Текст с процентом очистки -->
                    <TextView
                        android:id="@+id/cleaning_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="0%"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="14sp" />
                </FrameLayout>
            </LinearLayout>

            <!-- Разделитель -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="?attr/colorPrimary" />

            <!-- Кнопка выхода -->
            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выйти из аккаунта"
                android:textColor="@color/white"
                android:backgroundTint="@color/error" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout> 