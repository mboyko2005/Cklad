<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Аватар пользователя Telegram -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_primary_background"
            android:padding="8dp"
            android:src="@drawable/ic_person"
            app:tint="@color/white" />

        <!-- Информация о пользователе -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/telegramIdTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_telegram"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primary"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="ID: 123456789"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_assignment_ind"
                android:drawablePadding="8dp"
                android:drawableTint="@color/text_secondary"
                android:text="Роль: Администратор"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="20dp"
                android:contentDescription="Редактировать"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_edit"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.Button.Icon" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cornerRadius="20dp"
                android:contentDescription="Удалить"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_delete"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/error"
                style="@style/Widget.MaterialComponents.Button.Icon" />
>>>>>>> 1dea6d5621f4f889dffd0814aeeb98a9d2d0ba87
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 