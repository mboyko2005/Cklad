<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Верхняя часть с иконкой файла и информацией -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Контейнер для иконки файла и индикатора загрузки -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">
                
                <!-- Иконка файла (по умолчанию) -->
                <ImageView
                    android:id="@+id/file_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_primary_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_document"
                    android:tint="@android:color/white" />
                
                <!-- Иконка стрелки скачивания -->
                <ImageView
                    android:id="@+id/download_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_primary_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_download_arrow"
                    android:tint="@android:color/white"
                    android:visibility="gone" />
                
                <!-- Иконка отмены (крестик) -->
                <ImageView
                    android:id="@+id/cancel_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_primary_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_cancel"
                    android:tint="@android:color/white"
                    android:visibility="gone" />
                
                <!-- Кольцевой индикатор прогресса -->
                <ProgressBar
                    android:id="@+id/download_progress_ring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/white"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progress"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Информация о файле -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- Имя файла -->
                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="document.pdf" />

                <!-- Размер файла и прогресс загрузки -->
                <TextView
                    android:id="@+id/file_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12sp"
                    android:text="2.1 МБ" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 